{
    "jsRules": {
        // Functionality
        //
        "curly": true,
        "forin": true,
        "label-position": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-console": [
            true,
            // "log",
            // "error",
            // "warn",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-invalid-this": [false],
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-unused-new": true,
        "no-unused-variable": [true, "react"], // deprecated, may use tsc noUnusedParameters / noUnusedLocals
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "radix": true,
        "switch-default": true,
        "triple-equals": [true, "allow-null-check"],
        "use-isnan": true,

        // Maintainability
        //
        "eofline": true,
        "indent": [true, "spaces"],
        "max-line-length": [true, 160],
        "no-require-imports": false, // would be nice to enable
        "no-trailing-whitespace": true,

        // Style
        //
        "align": [
            true,
            "parameters",
            "arguments",
            "statements"
        ],
        "jsdoc-format": true,
        "new-parens": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [true, "single", "jsx-double"],
        "semicolon": [true, "always"],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },

    "rules": {
        // TypeScript Specific
        //
        "no-any": false, // would be nice to enable
        "no-inferrable-types": [true],
        "no-internal-module": true,
        "no-namespace": true,
        "no-reference": true,
        "no-var-requires": false, // would be nice to enable
        "prefer-for-of": false,
        "typedef": [  // would be nice to enable
            false,
            "call-signature",
            "parameter",
            "property-declaration"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],

        // Functionality
        //
        "curly": true,
        "forin": true,
        "label-position": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-console": [
            true,
            // "log",
            // "error",
            // "warn",
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "no-construct": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-invalid-this": [false],
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-switch-case-fall-through": true,
        "no-unsafe-finally": true,
        "no-unused-expression": true,
        "no-unused-new": true,
        "no-unused-variable": [true, "react"], // deprecated, may use tsc noUnusedParameters / noUnusedLocals
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "radix": true,
        // "restrict-plus-operands": true,
        "switch-default": true,
        "triple-equals": [true, "allow-null-check"],
        "use-isnan": true,

        // Maintainability
        //
        "eofline": true,
        "indent": [true, "spaces"],
        "max-classes-per-file": [false, 1], // would be nice to enable
        "max-line-length": [true, 160],
        "no-mergeable-namespace": true,
        "no-require-imports": false, // would be nice to enable
        "no-trailing-whitespace": true,

        // Style
        //
        "align": [
            true,
            "parameters",
            "arguments",
            "statements"
        ],
        "class-name": true,
        "interface-name": [true, "never-prefix"],
        "jsdoc-format": true,
        "new-parens": true,
        "object-literal-key-quotes": [true, "as-needed"],
        "one-line": [
            true,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [true, "single", "jsx-double"],
        "semicolon": [true, "always"],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}